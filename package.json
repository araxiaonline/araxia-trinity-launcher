{
  "name": "araxia-trinity-launcher",
  "productName": "Araxia Trinity Launcher",
  "version": "1.0.0",
  "description": "Custom launcher for Trinity Core private WoW server with SSH port forwarding",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:dir": "tsc && vite build && electron-builder --dir",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "keywords": [
    "electron",
    "react",
    "ssh",
    "tunnel",
    "launcher"
  ],
  "author": "Araxia Online",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.15.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "js-yaml": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "lucide-react": "^0.316.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.araxiaonline.trinitylauncher",
    "productName": "Araxia Trinity Launcher",
    "directories": {
      "output": "dist",
      "buildResources": "images"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "asarUnpack": [
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "araxiatrinity.yml",
        "to": "araxiatrinity.yml"
      }
    ],
    "win": {
      "target": ["portable"],
      "icon": "images/icon.ico",
      "certificateFile": null,
      "certificatePassword": null
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false
    }
  }
}
